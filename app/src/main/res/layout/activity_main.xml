<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:background="@color/white"
    >
    <RelativeLayout
        android:fitsSystemWindows="true"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/rl_menu"
        android:layout_gravity="start"
        >
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_60"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_logo"/>
        <androidx.core.widget.NestedScrollView
            android:layout_marginTop="@dimen/dp_10"
            android:scrollbars="none"
            android:paddingHorizontal="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/iv_logo">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:background="@drawable/bg_mn_selected"
                    android:padding="@dimen/dp_10"
                    android:id="@+id/mn_home"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_mn_home"
                        app:tint="@color/white"
                        android:src="@drawable/ic_mn_home"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:id="@+id/tv_mn_home"
                        android:textSize="@dimen/sp_13"
                        android:fontFamily="@font/inter_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="@string/home"
                        android:textAllCaps="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:padding="@dimen/dp_10"
                    android:id="@+id/mn_search"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_mn_search"
                        app:tint="@color/grey"
                        android:src="@drawable/ic_mn_search"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:id="@+id/tv_mn_search"
                        android:textSize="@dimen/sp_13"
                        android:fontFamily="@font/inter_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:text="@string/search"
                        android:textAllCaps="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:padding="@dimen/dp_10"
                    android:id="@+id/mn_join"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_mn_join"
                        app:tint="@color/grey"
                        android:src="@drawable/ic_auth"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:textSize="@dimen/sp_13"
                        android:fontFamily="@font/inter_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:text="@string/join_free"
                        android:textAllCaps="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:padding="@dimen/dp_10"
                    android:id="@+id/mn_service"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_mn_service"
                        app:tint="@color/grey"
                        android:src="@drawable/ic_mn_service"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:id="@+id/tv_mn_service"
                        android:textSize="@dimen/sp_13"
                        android:fontFamily="@font/inter_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:text="@string/services"
                        android:textAllCaps="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:padding="@dimen/dp_10"
                    android:id="@+id/mn_pricing"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_mn_pricing"
                        app:tint="@color/grey"
                        android:src="@drawable/ic_mn_pricing"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:id="@+id/tv_mn_pricing"
                        android:textSize="@dimen/sp_13"
                        android:fontFamily="@font/inter_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:text="@string/pricing"
                        android:textAllCaps="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:padding="@dimen/dp_10"
                    android:id="@+id/mn_event"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_mn_event"
                        app:tint="@color/grey"
                        android:src="@drawable/ic_mn_event"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:id="@+id/tv_mn_event"
                        android:textSize="@dimen/sp_13"
                        android:fontFamily="@font/inter_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:text="@string/event"
                        android:textAllCaps="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:padding="@dimen/dp_10"
                    android:id="@+id/mn_schedule"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_mn_schedule"
                        app:tint="@color/grey"
                        android:src="@drawable/ic_mn_schedule"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:id="@+id/tv_mn_schedule"
                        android:textSize="@dimen/sp_13"
                        android:fontFamily="@font/inter_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:text="@string/schedule"
                        android:textAllCaps="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:padding="@dimen/dp_10"
                    android:id="@+id/mn_noti"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_mn_noti"
                        app:tint="@color/grey"
                        android:src="@drawable/ic_noti"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:id="@+id/tv_mn_noti"
                        android:textSize="@dimen/sp_13"
                        android:fontFamily="@font/inter_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:text="@string/notifications"
                        android:textAllCaps="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:padding="@dimen/dp_10"
                    android:id="@+id/mn_mess"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_mn_mess"
                        app:tint="@color/grey"
                        android:src="@drawable/ic_mn_mess"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:id="@+id/tv_mn_mess"
                        android:textSize="@dimen/sp_13"
                        android:fontFamily="@font/inter_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:text="@string/messages"
                        android:textAllCaps="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:padding="@dimen/dp_10"
                    android:id="@+id/mn_blog"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ic_mn_blog"
                        app:tint="@color/grey"
                        android:src="@drawable/ic_mn_blog"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:id="@+id/tv_mn_blog"
                        android:textSize="@dimen/sp_13"
                        android:fontFamily="@font/inter_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:text="@string/blog"
                        android:textAllCaps="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:padding="@dimen/dp_10"
                    android:id="@+id/mn_login"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        app:tint="@color/grey"
                        android:src="@drawable/ic_auth"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:textSize="@dimen/sp_13"
                        android:fontFamily="@font/inter_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:text="@string/login"
                        android:textAllCaps="true"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dp_10"
                    android:padding="@dimen/dp_10"
                    android:id="@+id/mn_logout"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        app:tint="@color/grey"
                        android:src="@drawable/ic_logout"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:textSize="@dimen/sp_13"
                        android:fontFamily="@font/inter_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:text="@string/logout"
                        android:textAllCaps="true"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dp_10"
                    android:padding="@dimen/dp_10"
                    android:id="@+id/mn_delete_acc"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        app:tint="@color/grey"
                        android:src="@drawable/ic_deleteaccount"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"/>
                    <TextView
                        android:textSize="@dimen/sp_13"
                        android:fontFamily="@font/inter_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:text="@string/delete_account"
                        android:textAllCaps="true"/>
                </LinearLayout>
                <View
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/black"/>
                <TextView
                    android:textSize="@dimen/sp_13"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:fontFamily="@font/inter_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/_1_844_mulaquat"/>
                <TextView
                    android:textSize="@dimen/sp_13"
                    android:layout_marginStart="@dimen/dp_10"
                    android:fontFamily="@font/inter_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/_844_685_2728"/>
                <TextView
                    android:layout_marginStart="@dimen/dp_10"
                    android:fontFamily="@font/inter_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sp_12"
                    android:text="@string/all_rights_reserved"/>
                <TextView
                    android:layout_marginStart="@dimen/dp_10"
                    android:fontFamily="@font/inter_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sp_12"
                    android:text="@string/copyright_mulaquat_inc"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_main">
        <RelativeLayout
            android:paddingHorizontal="@dimen/dp_15"
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/bt_tb"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_menu" />
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_centerVertical="true"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/iv_home_logo"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_50"
                android:layout_centerInParent="true"
                android:src="@drawable/img_logo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:id="@+id/tv_title"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"
                android:fontFamily="@font/inter_semibold"
                android:visibility="gone"/>
        </RelativeLayout>
        <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/wv_page"
            android:layout_below="@id/rl_top"/>
        <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/wv_home"
            android:layout_below="@id/rl_top"/>
        <FrameLayout
            android:layout_below="@id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fl_main"/>
        <ProgressBar
            android:layout_centerInParent="true"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:id="@+id/pb_loading"/>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>